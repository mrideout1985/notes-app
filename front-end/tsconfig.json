{
	"compilerOptions": {
		"target": "esnext" /* Specify a set of bundled library declaration files that describe the target runtime environment. */,
		"jsx": "preserve",
		"module": "es2022",
		"moduleResolution": "Node",
		"rootDir": "./",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"types": ["vite/client", "node", "jest", "ts-jest"]
	},
	"include": ["src", "jest.config.js", "vite.config.ts"]
}
